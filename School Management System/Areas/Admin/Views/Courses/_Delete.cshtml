@model School_Management_System.Areas.Models.CoursesActionViewModel       

@if (Model != null)
{
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">
                <span>Delete Courses</span>
            </h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form id="actionForm">
                <input type="hidden" name="Id" value="@Model.Id" />
            </form>
            <div class="alert alert-danger" role="alert">
                Are you sure you want to delete this Course?
            </div>
        </div>
        <div class="modal-footer">
            <button id="actionButton" type="button" class="btn btn-danger"><i class="fa-solid fa-trash-can mr-1"></i>Delete</button>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><i class="fa-solid fa-xmark mr-1"></i>Close</button>
        </div>
    </div>
}


<script>
    $("#actionButton").click(function () {
        $.ajax({
            url: '@Url.Action("Delete", "Courses")',
            type: 'post',
            data: $("#actionForm").serialize()
        })
        .done(function (response) {
            if (response.Success)
            {
                window.location.href = "@Url.Action("Index", "Courses")";
            }
            else
            {
                $(".errorDiv").html(response.Message);
            }
        });
    });
</script>


