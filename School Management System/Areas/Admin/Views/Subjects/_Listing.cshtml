@model School_Management_System.Areas.Models.SubjectsListViewModel    

@if (Model != null && Model.Subjects != null && Model.Subjects.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Course_Id</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Subjects != null)
            {
                foreach (var subjects in Model.Subjects)
                {
                    <tr>
                        <td>
                            @subjects.Name
                        </td>
                        <td>
                            @subjects.Course_Id
                        </td>

                        <td>
                            <button data-href="@Url.Action("Action", "Subjects", new { Id = subjects.Id })" type="button" class="data-btn btn btn-success" data-bs-toggle="modal" data-bs-target="#actionModal"><i class="fa-solid fa-pen mr-1"></i>Edit</button>
                            <button data-href="@Url.Action("Delete", "Subjects", new { Id = subjects.Id })" type="button" class="data-btn btn btn-danger" data-bs-toggle="modal" data-bs-target="#actionModal"><i class="fa-solid fa-trash-can mr-1"></i>Delete</button>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning" role="alert">
        Sorry! No records exist.
    </div>
}



